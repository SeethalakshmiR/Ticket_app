<% if current_user.role == 'Admin' %>
  <% @movie.all.each do |movie| %>
    <br><%= movie.name %><br/>
  <% end %>
  <br><%= link_to "Add movie", new_movie_path %>
<% else %>
  <h1>welcome</h1>
  <%= form_tag(search_path, remote: true, :method => "get") do  %>
    <%= label_tag("Search: ") %>
    <br><%= text_field_tag :search, params[:search], id: 'name' %>
    <%= button_tag "search", id: "search_movie" %>
  <% end %>
<% end %>

<div id="search-results">
</div>

<script type= "text/javascript">
  $(document).ready(function() {
    $('#search_movie').click(function(event) {
      event.preventDefault();
      var text = $('#name').val();
      $.ajax({
        type: "GET",
        url: '/search',
        data: { search: text },
        success: function(movie) {
          if (!$.trim(movie)){
            alert("Search not found", + movie);
          }
          else{
            var output="<ul>";
            for (var i in movie)
            {
              output+="<li>" + movie[i].name + "</li>";
            }
            output+="</ul>";
            $('#search-results').append(output);
          }
        },
    });
   });
});
</script>

 <div id = "name">
    <% @movie.all.each do |movie| %>
    <br><%= link_to movie.name, theatre_path(id: movie.id) %><br/>
    <% end %>
  </div>
